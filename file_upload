// code how to upload a file and hoe to heandle there errors and chek all the error related condiations 

<html>
<body>

<form action = " " method = "POST" enctype = "multipart/form-data">
    <input type="file" name =" image"><br>
    <input type="submit">
</form>
<?php
if (isset($_FILES['image'])){
    echo "<pre>";
    print_r($_FILES);
    echo "</pre>";

    $f_name = $_FILES['image']['name'];
    $f_size = $_FILES['image']['size'];
    $f_temp = $_FILES['image']['tmp_name'];
    $f_type = $_FILES['image']['type'];
    $uploadok = 1;

  //if file is not uploaded
  if(empty($f_name) ){
    echo "please select the file ";
  }// if file is already exists
  elseif(file_exists("upload/".$f_name)){
      echo "Sorry, file already exists.";
      $uploadok = 0;
    }// limit file size
    elseif ($f_size > 5000000) {
      echo "file is to large";
      $uploadok =0;
    }// chek file type 
    elseif ($f_type != 'image/jpg' && $f_type != "image/png" && $f_type != "image/jpeg" && $f_type != "image/gif") {
      echo "Sorry, only JPG, JPEG, PNG & GIF files are allowed.";
      $uploadok = 0;
    }
    elseif($uploadok == 0){
      echo "Sorry, your file was not uploaded.";
    } // file upload function
    else{
      if(move_uploaded_file($f_temp,"upload/".$f_name)){
        echo "file ".$f_name." has been uploaded "; 
      }else
      {
        echo "Sorry, there was an error uploading your file.";
      }
    }
 }

?>


</body>
</html>
